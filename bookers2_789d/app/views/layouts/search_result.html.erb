<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">

        <% if @range == "User" %>
          <thead>
            <tr>
              <td>Image</td>
              <td>Name</td>
              <td>Introduction</td>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image, size:"60x60" %></td>
                <td><%= link_to user.name, user_path(user.id) %></td>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>
          <% else %>
          <thead>
            <tr>
              <td></td>
              <td>Title</td>
              <td>Opinion</td>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.get_profile_image, size:"60x60" %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>