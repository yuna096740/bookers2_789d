<div class="container">
  <div class="row">
    <div class="col">
      <h4>Books search for"<%= @word %>"</h4>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th>Tag</th>
          <th colspan="3"></th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image, size:"60x60" %></td>
            <td><%= link_to book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to book.category %></td>
            <td class="favorite_btn_<%= book.id %>">
              <%= render "favorites/favorite-btn", book: book %>
            </td>
            <td><%= book.book_comments.count %></td>
            <td><%= render 'books/static_rate', book: book %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>